<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.science.timemerge.PickerView
        android:id="@+id/pv_start_hour"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_start_time_center" />

    <TextView
        android:id="@+id/tv_start_time_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/pv_start_minute"
        android:text=":"
        android:textSize="16sp" />

    <com.science.timemerge.PickerView
        android:id="@+id/pv_start_minute"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/tv_center" />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="â€”"
        android:textSize="16sp" />

    <com.science.timemerge.PickerView
        android:id="@+id/pv_end_hour"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/tv_center" />

    <TextView
        android:id="@+id/tv_end_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/pv_end_hour"
        android:text=":"
        android:textSize="16sp" />

    <com.science.timemerge.PickerView
        android:id="@+id/pv_end_minute"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_end_hour" />

</RelativeLayout>